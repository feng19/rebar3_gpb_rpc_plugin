{erl_opts, [
    debug_info,
    warn_export_all,
    warn_export_vars,
    warn_obsolete_guard,
    warn_shadow_vars,
    warn_unused_import,
    warnings_as_errors
]}.

{deps, [
    {rebar3_gpb_plugin, "2.12.0"}
]}.

{cover_enabled, true}.
{cover_print_enabled, true}.
{profiles, [
    {test, [
        {erl_opts, [export_all]},
        {deps, [meck]}
    ]}
]}.

{dialyzer, [
    {warnings, [
        unmatched_returns,
        error_handling,
        race_conditions,
        underspecs
    ]}
]}.
